@model List<pjct_webshop.Models.Produkt_model>

@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="container">
    <div class="row">
        <div class="box">
            <div class="col-lg-12 text-center">
                @foreach (var product in Model)
                {
                    <div class="col-md-2 column productbox">
                        <img src="@Url.Content(product.ImagePath)" class="img-thumbnail">
                        <div class="producttitle">@product.Name</div>
                        <div class="productprice">
                            <div class="pull-right"><a href="#" class="btn btn-danger btn-sm" role="button">Köp</a>
                            </div>
                            <div class="pricetext">@product.Price kr</div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>