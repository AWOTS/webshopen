@model List<pjct_webshop.Models.AllProduct_model>

@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2>SearchResult</h2>
{
    <div class="container">
        <div class="row">
            <div class="box">
                <div class="col-lg-12 text-center">
                    @foreach (var product in Model)
                {
                        <div class="col-md-2 column productbox">
                            <img src="@Url.Content(product.lista.ToString())" class="img-responsive">
                            <div class="producttitle">@product.lista</div>
                            <div class="productprice">
                                <div class="pull-right">
                                    <a href="#" class="btn btn-danger btn-sm" role="button">Köp</a>
                                </div>
                                <div class="pricetext">@product.lista kr</div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

