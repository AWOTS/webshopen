@model List<pjct_webshop.Models.Produkt_model>

@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="container">
    <div class="row">
        <div class="box">
            <div class="col-lg-12 text-center">
                @foreach (var product in @Model)
                {
                    <div class="col-md-2 column productbox">
                        <img src="~/Images/ProductsSquared/DSC_0518_600x600.png" class="img-responsive">
                        <div class="producttitle">@product.name</div>
                        <div class="productprice">
                            <div class="pull-right">
                                <a href="#" class="btn btn-danger btn-sm" role="button">Köp</a>
                            </div>
                            <div class="pricetext">@product.price kr</div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


