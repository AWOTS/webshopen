@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="box col-md-6">
            <h1>Administratör</h1>
            <br />
            <br/>

            <form>
                <h2>Lägg till produkt</h2>
                <br />
                <h6>Produktnamn<label class="alert-warning">*</label></h6>
                <input id="NameNewProduct" type="text" class="form-control" placeholder="Namn">
                <h6>Beskrivning<label class="alert-warning">*</label></h6>
                <input id="DescriptionNewProduct" type="text" class="form-control" placeholder="Beskrivning">
                <h6>Bildkälla<label class="alert-warning">*</label></h6>
                <input id="ImageNewProduct" type="text" class="form-control" placeholder="Bildens adress">
                <h6>Antal<label class="alert-warning">*</label></h6>
                <input id="NumbersLeftNewProduct" type="number" class="form-control" placeholder="antal som finns tillgängliga">
                <h6>Pris<label class="alert-warning">*</label></h6>
                <input id="PriceNewProduct" type="number" class="form-control" placeholder="Pris i kr">
                <h6>Typ</h6>
                <label class="radio-inline"><input class="TypeNewProduct" type="radio" name="optradio">Halsband</label>
                <label class="radio-inline"><input class="TypeNewProduct" type="radio" name="optradio">Armband</label>
                <label class="radio-inline"><input class="TypeNewProduct" type="radio" name="optradio">Örhängen</label>
                <label class="radio-inline"><input class="TypeNewProduct" type="radio" name="optradio">Ringar</label>
                <label class="radio-inline"><input class="TypeNewProduct" type="radio" name="optradio">Töjningar</label>
                <label class="radio-inline"><input class="TypeNewProduct" type="radio" name="optradio">Heminredning</label>
                <br />
                <h6>Tillgänglig efter produkt sålt slut?</h6>
                <label class="radio-inline"><input class="AvailableWhenNullNewProduct" type="radio" name="optradio">Ja</label>
                <label class="radio-inline"><input class="AvailableWhenNullNewProduct" type="radio" name="optradio">Nej</label>
                <br/><br/>
                <input type="button" value="Lägg till" id="AddNewProductButton">
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>

        <div class="box col-md-6">
            <form action="demo_form.asp">
                <h2>Uppdatera produkt</h2>
                <br />
                <h6>Du får fylla i all information om produkten igen här i fälten sen klicka på uppdatera.</h6>
                <br />
                <h6>Artikel nr på produkt du vill uppdatera<label class="alert-warning">*</label></h6>
                <input type="text" class="form-control" value="art. nr">
                <h6>Produktnamn<label class="alert-warning">*</label></h6>
                <input type="text" class="form-control" value="Namn">
                <h6>Beskrivning<label class="alert-warning">*</label></h6>
                <input type="text" class="form-control" value="Beskrivning">
                <h6>Bildkälla<label class="alert-warning">*</label></h6>
                <input type="text" class="form-control" value="Bildens adress">
                <h6>Antal<label class="alert-warning">*</label></h6>
                <input type="number" class="form-control" value="antal som finns tillgängliga">
                <h6>Pris<label class="alert-warning">*</label></h6>
                <input type="number" class="form-control" value="Pris i kr">
                <h6>Typ</h6>
                <label class="radio-inline"><input type="radio" name="optradio">Halsband</label>
                <label class="radio-inline"><input type="radio" name="optradio">Armband</label>
                <label class="radio-inline"><input type="radio" name="optradio">Örhängen</label>
                <label class="radio-inline"><input type="radio" name="optradio">Ringar</label>
                <label class="radio-inline"><input type="radio" name="optradio">Töjningar</label>
                <label class="radio-inline"><input type="radio" name="optradio">Heminredning</label>
                <br />
                <h6>Tillgänglig efter produkt sålt slut?</h6>
                <label class="radio-inline"><input type="radio" name="optradio">Ja</label>
                <label class="radio-inline"><input type="radio" name="optradio">Nej</label>
                <br /><br />
                <input type="submit" value="Uppdatera">
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>

        <div class="box col-md-6">
            <form action="demo_form.asp">
                <h2>Ta bort produkt</h2>
                <br />
                <h6>Obs! när du klickat på ta bort så försvinner produkten helt ur databasen</h6>
                <br />
                <h6>Artikel nr på produkt du vill ta bort<label class="alert-warning">*</label></h6>
                <input type="text" class="form-control" value="art. nr">
                <br />
                <input type="submit" value="Ta bort">
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>