@model List<pjct_webshop.Models.Produkt_model>

@{
    ViewBag.Title = "Kassa";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<head>
    <meta charset="utf-8">
    <title>jQuery UI Dialog - Animation</title>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script>
  $(function() {
    $( "#dialog" ).dialog({
      autoOpen: false,
    });       
    $( "#kknapp" ).click(function() {
      $( "#dialog" ).dialog( "open" );
    });
  });
    </script>
</head>
<div class="container">
    <div class="row">
        <div class="box">
            <table class="table">
                @{ foreach (var item in Model)
                    {

                <tr>
                    <td class="col-md-8">
                        <div class="box col-md-2" >
                            <img src="@Url.Content(item.imgSource)" class="img-responsive" />
                        </div>
                    </td>
                    <td class="col-md-4">
                        <div class="clearfix">
                            <div class="input-group col-md-5 pull-left">

                                <span class="input-group-btn">
                                    <a href="#" class="btn btn-primary removeOneFromCart"><span class="glyphicon glyphicon-minus-sign"></span></a>
                                </span>
                                <input type="number" class="form-control addNumberToCart" placeholder="@item.amount.ToString()">
                                <span class="input-group-btn">

                                    <a href="#" class="btn btn-primary addOneToCart"><span class="glyphicon glyphicon-plus-sign"></span></a>
                                </span>
                            </div>
                            <div class=" pull-right">
                                Ångra köp:
                                <a href="#" class="btn btn-danger removeFromCart"><span class="glyphicon glyphicon-remove"></span></a>
                            </div>
                        </div>
                    </td>
                    @*<th>@Html.DisplayNameFor(x => temp.ProductName)</th>
                        <th>@Html.DisplayNameFor(x => temp.ProductDescription)</th>
                        <th>@Html.DisplayNameFor(x => temp.ProductPrice)</th>*@

                </tr>
                    }

                    }
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="box  col-md-6">
            <h3>Leveranssätt</h3>
            <label class="radio-inline"><input type="radio" name="optradio">Post, 29 kr</label>
            <label class="radio-inline"><input type="radio" name="optradio">Hämta i Stockholm, 0 kr</label>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3"></div>
        <div class="box  col-md-6">
            <table class="table table-hover">
                <tr>
                    <td>
                        Summa:
                    </td>
                    <td>
                        X kr
                    </td>
                </tr>
                <tr><td>Frakt, inkl. 25% moms:</td><td>"if post, 29 kr else, 0 kr"</td></tr>
                <tr><td>Moms, 25%:</td><td>"x*0.75"</td></tr>
                <tr><td>Totalt, exkl. moms</td><td>"x*0.75+frakt"</td></tr>
                <tr><td>Totalt, inkl. moms</td><td>"x+frakt"</td></tr>
            </table>
        </div>
        <div class="col-md-3"></div>
    </div>
    
    <form>

        <div class="row">
            <div class="col-md-3"></div>

            <div class="box col-md-6">
                <h6>Förnamn</h6>
                <input id="kförnamn" type="text" class="form-control" placeholder="Förnamn">
                <h6>Efternamn</h6>
                <input id="kefternamn" type="text" class="form-control" placeholder="Efternamn">
                <h6>Adress</h6>
                <input id="kadress" type="text" class="form-control" placeholder="Adress">
                <h6>Stad</h6>
                <input id="kstad" type="text" class="form-control" placeholder="Stad">
                <h6>Postnummer</h6>
                <input id="kpostnummer" type="text" class="form-control" placeholder="Postnummer">
                <h6>Email</h6>
                <input id="kemail" type="text" class="form-control" placeholder="Email">
                <h6>Telefonnummer</h6>
                <input id="ktelefonnummer" type="text" class="form-control" placeholder="Telefonnummer" required>
                <h6>Meddelande till butiken</h6>
                <input id="kmeddelande" type="text" class="form-control" placeholder="Här skriver du om du har extra information om ordern">
            </div>
            <div class="col-md-3"></div>
        </div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="box col-md-6">
                <div>
                    <label id="kcheck" class="checkbox-inline"><input type="checkbox">Jag godkänner </label>
                    <a href=""> försäljningsvillkoren</a>
                </div>
                <h1></h1>
                <div id="dialog" title="Köp registrerat">
                    <p>Ett mail kommer skickas med information om köpet. Betalning görs till Swishnummer 0767117187. När vi fått bekräftelse på din betalning skickar vi dina varor. </p>
                </div>
                <div>
                    <a class="btn btn-success" id="kknapp">Slutför köp</a>
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
    </form>
</div>



