@model pjct_webshop.Models.User
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@using (Html.BeginForm("AdminLogin", "Main", FormMethod.Post))
{

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center SmileWithStyleCopyright">
                <p>
                    Admin login
                    <span class="glyphicon glyphicon-log-in"> </span>
                </p>
                <p>
                    <fieldset>
                        <label for="Name">Namn</label>
                        @Html.EditorFor(a => a.Name, new { htmlAttributes = new { @class = "stylesheet", placeholder = "Namn" } })
                        <label for="Password">Lösenord</label>
                        @Html.EditorFor(a => a.Password, new { htmlAttributes = new { @class = "stylesheet", placeholder = "Lösenord" } })
                        <br />
                        <br />
                        <br />
                        <input type="submit" value="Logga in" />
                    </fieldset>
                </p>
            </div>
        </div>
    </div>
}


